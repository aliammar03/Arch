##Install Guide##

#Installing Arch


#Connect to a network

iwctl

device list
station device scan
station device get-networks 
station device connect SSID
Exit

ping google.com 


#Update Time

timedatectl set-timezone Asia/Karachi


#Partitioning and Labeling

lsblk 
Fdisk -l
cfdisk /dev/nvme0n1
Make sure to label the /, ArchRoot and /home Home


#Mounting

mkdir /mnt/home
mount /dev/nvme0n1p* /mnt/boot
mount /dev/nvme0n1p* /mnt
mount /dev/nvme0n1p* /mnt/home


#Reflector

reflector --verbose --latest 20 --protocol http --sort rate --save /etc/pacman.d/mirrorlist


#Alternativly
#Install Base System 

pacstrap -i /mnt base base-devel linux-zen linux-zen-headers linux-firmware intel-ucode reflector git sudo


#Fstab

genfstab -U /mnt >> /mnt/etc/fstab


#ArchChroot

arch-chroot /mnt
passwd 

#Get Arch Installation Commands

git clone https://github.com/aliammar03/Arch


#Add Users

useradd -m aliammar
passwd aliammar 
usermod-aG wheel,ftp,sys,kvm aliammar
EDITOR=nano visudo 


#Locale

nano /etc/locale.gen
locale-gen
echo LANG=en_GB.UTF-8 > /etc/locale.conf
export LANG=en_GB.UTF-8



#Set hosts

echo RAZER-A > /etc/hostname 
nano /etc/hosts

127.0.0.1    localhost 
::1               localhost
127.0.1.1     RAZER-A.localdomain   localhost

#Alternatively

cp /Arch/etc/hostname /etc/hostname
cp /Arch/etc/hosts /etc/hosts


#Set Clock

ln-sf /usr/share/zoneinfo/Asia/Karachi /etc/localtime

hwclock --systohc


#Bootloader 

#Systemd-boot

bootctl install
systemctl enable systemd-boot-update.service

nano /boot/loader/loader.conf

default  Arch.conf
timeout  0
editor   yes

nano /boot/loader/entries/Arch.conf

title Arch Linux
linux /vmlinuz-linux-zen
initrd /intel-ucode.img
initrd /initramfs-linux-zen.img
options root="LABEL=ArchRoot" rw quiet splash

#Windows

mkdir /mnt/winefi
mount /dev/nvme0n1p* /mnt/winefi
cp -r /mnt/winefi/EFI/Microsoft /boot/EFI/Microsoft


#Paclists
pacman -S --needed - < essential.txt
pacman -S --needed - < media.txt
pacman -S --needed - < print.txt
pacman -S --needed - < apps.txt
pacman -S gnome

#Reflector Service

nano /etc/xdg/reflector/reflector.conf

--save /etc/pacman.d/mirrorlist
--protocol http
--latest 20
--sort rate


#Services

systemctl enable NetworkManager.service
systemctl enable gdm.service
systemctl enable reflector.service

exit 
reboot 


